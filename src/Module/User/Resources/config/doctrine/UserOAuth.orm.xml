<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Depense\Module\User\Model\UserOAuth" table="user_oauth">

        <id column="id" name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <indexes>
            <index columns="provider,identifier"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="user_id,provider" name="user_provider"/>
        </unique-constraints>

        <field column="provider" name="provider" type="string"/>
        <field column="identifier" name="identifier" type="string"/>
        <field column="access_token" name="accessToken" type="string" nullable="true"/>
        <field column="refresh_token" name="refreshToken" type="string" nullable="true"/>

        <many-to-one field="user" target-entity="Depense\Module\User\Model\User" inversed-by="oauthAccounts">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

    </entity>
</doctrine-mapping>
