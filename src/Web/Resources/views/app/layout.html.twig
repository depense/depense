<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{% block title %}Welcome!{% endblock %} - Depense.Net</title>

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('site.webmanifest') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body class="depense-bg-light">

{% include 'app/include/_navbar.html.twig' %}

{% if include_main_menu|default(true) %}
    <div class="main-menu bg-white w-100">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="main-menu-group list-group list-group-horizontal">
                    <a href="{{ path('app_page_overview') }}" class="list-group-item active">Overview</a>
                    <a href="#" class="list-group-item">Transactions</a>
                    <a href="#" class="list-group-item">Analytics</a>
                </div>

                <div class="d-flex">
                    {% if depense.activeWallet %}
                        <a href="{{ path('app_wallet_edit', {'wallet': depense.activeWallet.id}) }}"
                           class="btn btn-sm btn-light"
                           data-toggle="tooltip"
                           data-placement="bottom"
                           title="Update &quot;{{ depense.activeWallet.name }}&quot; wallet">Edit</a>
                    {% endif %}

                    <div class="dropdown mx-2">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="dropdownAccountButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Current wallet:
                            {% if depense.activeWallet %}
                                <strong>{{ depense.activeWallet.name }}</strong>
                            {% else %}
                                <strong class="text-uppercase">all</strong>
                            {% endif %}
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownAccountButton">
                            {% for wallet in depense.wallets %}
                                <a class="dropdown-item {% if depense.activeWallet == wallet %}active{% endif %}"
                                   href="{{ path('app_wallet_switch', {'wallet': wallet.id}) }}">{{ wallet.name }}</a>
                            {% endfor %}
                        </div>
                    </div>

                    <a href="{{ path('app_wallet_create') }}"
                       class="btn btn-sm btn-light"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       title="Add a new wallet">+</a>
                </div>
            </div>
        </div>
    </div>
{% endif %}

<main class="container py-4">
    {% block body %}{% endblock %}
</main>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
