{% extends 'root/card_layout.html.twig' %}

{% block title %}{{ 'words.login' |trans }} - Depense{% endblock %}

{% block card %}
    <div class="card p-3 m-auto" style="max-width: 450px;">
        <div class="card-header bg-transparent border-bottom-0">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h2 font-weight-bold">{{ 'words.signin'|trans }}</h1>
                    <span class="depense-text-secondary">{{ 'phrases.login.description'|trans }}</span>
                </div>

                <div style="height: 40px;">
                    <img alt="Depense.Net" class="mh-100 w-auto"
                         src="https://react-material-kit.devias.io/static/images/firebase.svg">
                </div>
            </div>
        </div>

        <div class="card-body">
            <a href="{{ path('root_oauth_google_connect') }}" type="button" class="btn btn-light btn-block py-2">
                    <span class="d-flex justify-content-center align-items-center">
                        <svg class="mr-2" width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M19.6 10.23c0-.82-.1-1.42-.25-2.05H10v3.72h5.5c-.15.96-.74 2.31-2.04 3.22v2.45h3.16c1.89-1.73 2.98-4.3 2.98-7.34z"
                                fill="#4285F4"/>
                            <path
                                d="M13.46 15.13c-.83.59-1.96 1-3.46 1-2.64 0-4.88-1.74-5.68-4.15H1.07v2.52C2.72 17.75 6.09 20 10 20c2.7 0 4.96-.89 6.62-2.42l-3.16-2.45z"
                                fill="#34A853"/>
                            <path
                                d="M3.99 10c0-.69.12-1.35.32-1.97V5.51H1.07A9.973 9.973 0 0 0 0 10c0 1.61.39 3.14 1.07 4.49l3.24-2.52c-.2-.62-.32-1.28-.32-1.97z"
                                fill="#FBBC05"/>
                            <path
                                d="M10 3.88c1.88 0 3.13.81 3.85 1.48l2.84-2.76C14.96.99 12.7 0 10 0 6.09 0 2.72 2.25 1.07 5.51l3.24 2.52C5.12 5.62 7.36 3.88 10 3.88z"
                                fill="#EA4335"/>
                        </svg>
                        <span>{{ 'phrases.login.signin_with_google'|trans }}</span>
                    </span>
            </a>

            <div class="row no-gutters align-items-center my-4">
                <div class="col">
                    <hr>
                </div>
                <div class="col-auto px-3 depense-text-secondary"><span class="text-uppercase">{{ 'words.or'|trans }}</span></div>
                <div class="col">
                    <hr>
                </div>
            </div>

            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="inputEmail" class="required">{{ 'words.email'|trans }}</label>
                    <input type="email" id="inputEmail" name="username" value="{{ last_username }}" required="required"
                           class="form-control">
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="required">{{ 'words.password'|trans }}</label>
                    <input type="password" id="inputPassword" name="password" required="required" class="form-control">
                </div>

                <button id="btnLogin" class="btn btn-block depense-btn-primary py-2">{{ 'words.signin'|trans }}</button>
            </form>

            <hr class="my-4">

            <div class="pt-1 w-100 text-center">
                <span class="depense-text-secondary">{{ 'phrases.general.new_to_depense'|trans }} <a href="{{ path('root_register') }}">{{ 'phrases.general.create_account'|trans }}</a>.</span>
            </div>
        </div>
    </div>
{% endblock %}
